{
  "name": "@amabeth/repeating-wheel-picker",
  "version": "1.1.0",
  "description": "A React Native wheel picker that allows endless scrolling through repeating content",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "example/package.json",
    "example/**/*.ts",
    "example/**/*.tsx",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "cd example & npm start",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build & husky",
    "docs": "typedoc",
    "release": "npx dotenv -- release-it --config .release-it.json"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "expo",
    "wheel",
    "picker",
    "wheel-picker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amabeth/repeating-wheel-picker.git"
  },
  "author": "amabeth <amabeth.dev@gmail.com> (https://github.com/amabeth)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amabeth/repeating-wheel-picker/issues"
  },
  "homepage": "https://amabeth.github.io/repeating-wheel-picker",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "expo-linear-gradient": "^14.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@evilmartians/lefthook": "^1.11.16",
    "@react-native/babel-preset": "^0.80.1",
    "@react-native/eslint-config": "^0.80.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.14",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "react-native-builder-bob": "^0.40.12",
    "release-it": "^19.0.3",
    "typedoc-github-theme": "^0.3.0",
    "typedoc-plugin-coverage": "^4.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "19.0.0",
    "react-native": "0.79.5"
  },
  "overrides": {
    "@react-native/eslint-config": {
      "eslint": "$eslint"
    },
    "conventional-changelog-conventionalcommits": "8.0.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.51.1"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.tsx"
    ],
    "projectDocuments": [
      "*.md"
    ],
    "sort": [
      "source-order"
    ],
    "plugin": [
      "typedoc-plugin-coverage",
      "typedoc-github-theme"
    ]
  }
}
